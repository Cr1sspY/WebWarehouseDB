@page
@model WebWarehouseDB.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Сотрудники";
}

<h1>Сотрудники</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].PassportInformation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassportInformation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EmployeeId">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.EmployeeId">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.EmployeeId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
