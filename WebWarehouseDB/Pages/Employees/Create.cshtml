@page
@model WebWarehouseDB.Pages.Employees.CreateModel

@{
    ViewData["Title"] = "Создание сотрудника";
}

<h1>Создание</h1>

<h4>Сотрудник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.EmployeeId" class="control-label"></label>
                <input asp-for="Employee.EmployeeId" class="form-control" />
                <span asp-validation-for="Employee.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.FullName" class="control-label"></label>
                <input asp-for="Employee.FullName" class="form-control" />
                <span asp-validation-for="Employee.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Age" class="control-label"></label>
                <input asp-for="Employee.Age" class="form-control" />
                <span asp-validation-for="Employee.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Sex" class="control-label"></label>
                <input asp-for="Employee.Sex" class="form-control" />
                <span asp-validation-for="Employee.Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Address" class="control-label"></label>
                <input asp-for="Employee.Address" class="form-control" />
                <span asp-validation-for="Employee.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PhoneNumber" class="control-label"></label>
                <input asp-for="Employee.PhoneNumber" class="form-control" />
                <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PassportInformation" class="control-label"></label>
                <input asp-for="Employee.PassportInformation" class="form-control" />
                <span asp-validation-for="Employee.PassportInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PositionId" class="control-label"></label>
                <select asp-for="Employee.PositionId" class ="form-control" asp-items="ViewBag.PositionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
