@page
@model WebWarehouseDB.Pages.Providers.IndexModel

@{
    ViewData["Title"] = "Поставщики";
}

<h1>Поставщики</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].SuppliedProduct1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].SuppliedProduct2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].SuppliedProduct3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Provider) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuppliedProduct1.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuppliedProduct2.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuppliedProduct3.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProviderId">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.ProviderId">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProviderId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
