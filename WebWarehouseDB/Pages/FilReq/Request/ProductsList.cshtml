@page
@model WebWarehouseDB.Pages.FilReq.Request.ProductsListModel
@{
    <h1>Список товаров</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].TypeId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @{
                            try
                            {
                                @Model.ProductTypes.First(r => r.TypeId == item.TypeId).Name
                            }
                            catch
                            {
                                <p> Данных нет </p>
                            }
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
