@page
@model WebWarehouseDB.Pages.FilReq.Filter.TypeFilterModel
@{
    <h1>Фильтр по типу @Model.ProductType.Name</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].TypeId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Model.ProductType.Name

                    </td>
                </tr>
            }
        </tbody>
    </table>
}

