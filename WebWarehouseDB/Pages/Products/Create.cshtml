@page
@model WebWarehouseDB.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Создание";
}

<h1>Создание</h1>

<h4>Товар</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.ProductId" class="control-label"></label>
                <input asp-for="Product.ProductId" class="form-control" />
                <span asp-validation-for="Product.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Manufacturer" class="control-label"></label>
                <input asp-for="Product.Manufacturer" class="form-control" />
                <span asp-validation-for="Product.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.StorageConditions" class="control-label"></label>
                <input asp-for="Product.StorageConditions" class="form-control" />
                <span asp-validation-for="Product.StorageConditions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Package" class="control-label"></label>
                <input asp-for="Product.Package" class="form-control" />
                <span asp-validation-for="Product.Package" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ShelfLife" class="control-label"></label>
                <input asp-for="Product.ShelfLife" class="form-control" />
                <span asp-validation-for="Product.ShelfLife" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.TypeId" class="control-label"></label>
                <select asp-for="Product.TypeId" class ="form-control" asp-items="ViewBag.TypeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
