@page
@model WebWarehouseDB.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Заказчики";
}

<h1>Заказчики</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].ConsumedProduct1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].ConsumedProduct2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].ConsumedProduct3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsumedProduct1.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsumedProduct2.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsumedProduct3.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CustomerId">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.CustomerId">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.CustomerId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
